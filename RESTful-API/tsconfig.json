{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./build",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "lib": ["ES6"]
    },
    "include": ["src/**/*.ts", "src/**/*.json"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
